<center><h2>Forgot your password?</h2>
<br/>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-inline" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, "Enter your Email address:", class: "control-label" %>
    <%= f.email_field :email, autofocus: true, size: 50 %>
  </div>
  <br/><br/><br/>
  <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
<% end %>
<br/><br/>
<%= render "devise/shared/links" %>
</center>