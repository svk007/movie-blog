<center><%= error_messages_for(@post) %></center>

<%= form_for(@post, url: {action: 'update', id: @post.id}, html: { multipart: true, :class => "form-horizontal center" }) do |f| %>
  
  <%= render(partial: 'postform', locals: {f: f}) %>

  <center><%= f.submit "Update Post", class: "btn btn-success" %></center>

<% end %>
  