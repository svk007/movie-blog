<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
		<center>
		<h3>Don't see what you are looking for?</h3>
		Add a new movie to our database. We absolutely encourage it !
		<span class="btn btn-success"><%= link_to "Add Post", new_post_path, {:style=>'color:#FFFFFF;'} %></span>
	</center>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
		<center>
			<br/>
			<%= form_tag('/posts', method: :get, enforce_utf8: false) do %>
			<%= text_field_tag :movie_name, params[:movie_name] %><br/>
			<%= submit_tag "Search Movie", name: nil, class: "btn btn-primary" %>
			<% end %>
		</center>
	</div>
</div>
<br/><br/>
<div id="posts">
	<%= render('post')	%>
</div>
<center>
	<div id="pag">
		<%= will_paginate @posts %>
	</div>
</center>
